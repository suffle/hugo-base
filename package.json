{
  "name": "hugo-base",
  "version": "1.0.0",
  "description": "A boilerplate for hugo",
  "scripts": {
    "start": "npm run watch",
    "watch": "./node_modules/.bin/gulp watch || true",
    "build:dev": "./node_modules/.bin/gulp build",
    "build:prod": "NODE_ENV=production ./node_modules/.bin/gulp build",
    "clean": "./node_modules/.bin/gulp clean",
    "lintjs": "./node_modules/.bin/eslint src/js/**/*.js",
    "deploy": "npm run lintjs && npm run build:prod",
    "check-performance": "./node_modules/.bin/lighthouse --chrome-flags=\"--headless\" --output-path"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "browser-sync": "^2.24.7",
    "chrome-launcher": "^0.10.0",
    "clean-webpack-plugin": "^0.1.19",
    "critical": "^1.1.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.0",
    "cssnano-preset-default": "^4.0.0",
    "del": "^3.0.0",
    "eslint": "^5.4.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-responsive": "^2.11.0",
    "gulp-responsive-config": "git+https://git@github.com/suffle/gulp-responsive-config.git#master",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "hugo-bin": "^0.30.0",
    "lighthouse": "^3.0.3",
    "lighthouse-logger": "^1.1.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-preset-env": "^5.3.0",
    "precss": "^2.0.0",
    "prettier": "^1.14.2",
    "sharp": "^0.20.7",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "uncss": "^0.16.2",
    "webpack": "^4.17.1",
    "webpack-merge": "^4.1.4"
  }
}
